           Estado
        </th>
        <th>
          Salario
        </th>
        <th>
         Empresa
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VacanteTitulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VacanteFecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Delegacion_Municipio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescripcionVacante)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CometarioVacante)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RepresentanteEmpresa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VacanteArea.Clave)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VacanteEstatus.Clave)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VacanteLocalidad.Clave)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VacanteSueldo.Clave)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empresa.Clave)
        </td>
        <td>
            <a href="@Url.Action("Details" , new { id = item.VacanteId  }  )" class="btn btn-success"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
            <a href="@Url.Action("Edit" , new { id = item.VacanteId  }  )" class="btn btn-warning"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>


<table class="table">
    <tr>
        <th>
           Titulo de la Vacante
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VacanteFecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Delegacion_Municipio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescripcionVacante)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CometarioVacante)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RepresentanteEmpresa)
        </th>
        <th>
          Area
        </th>
        <th>
            Estatus
        </th>

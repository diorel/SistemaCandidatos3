<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema de  Gestion de Candidato</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


 
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("App Candidatos", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" >
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Reclutador", "Busquedafilter", "Capturista")</li>


                    <li>                        
                        @if (@Session["LogedUserFullname"].ToString() == "Raul Diorelyon Cortes Amador" || @Session["LogedUserFullname"].ToString() == "Administrador")
                        {
                            @Html.ActionLink("Administrador", "Busquedafilter", "Filtro", new { @Id = "MenuAdministrador" })
                        }

                       else
                       {
                          @Html.ActionLink("Administrador", "Busquedafilter", "Filtro", new { @Id = "MenuAdministrador", @style = "display:none" })
                       }
                    </li>
                    <li>@Html.ActionLink("Reporte", "ReporteRender", "Capturista")</li>
                    <li>@Html.ActionLink("Salir", "Index", "CerrarSesion")</li>
                    <li>
                    </li>
                </ul>


                @*<h5>  Bienbenido - @Session["LogedUserFullname"].ToString() </h5>*@ 
             
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <h4> Vercion Beta</h4>
            <p>&copy; @DateTime.Now.Year - Agentia SA. de CV.  </p>
        </footer>
    </div>



    <script type="text/javascript">

     function ocultar()
     {
        
         @Html.ActionLink("Administrador", "Busquedafilter", "Filtro", new { @Id = "MenuAdministrador", @style = "display:none" })
         
     }
    </script>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
